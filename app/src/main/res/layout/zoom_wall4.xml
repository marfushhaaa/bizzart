<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bucket_table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bucket_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/black4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_black"
        app:layout_constraintStart_toStartOf="@+id/bucket_table"
        app:layout_constraintTop_toTopOf="@+id/bucket_table" />

    <ImageView
        android:id="@+id/back_butt5"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/bexit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/bucket_img"
        android:layout_width="247dp"
        android:layout_height="143dp"
        android:layout_marginBottom="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/bucket_with_water_zoomed" />
</androidx.constraintlayout.widget.ConstraintLayout>