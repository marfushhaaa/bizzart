<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/first_anim_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu.FirstActivity">

    <ImageView
        android:id="@+id/first_corridor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/mainbackgr1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/first_black"
        app:layout_constraintTop_toTopOf="@+id/first_black" />

    <ImageView
        android:id="@+id/first_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>