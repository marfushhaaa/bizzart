<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/diary_l"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>

    <ImageView
        android:id="@+id/diary_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/diary_with_letter_darktheme"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/new_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/diary_view"
        app:layout_constraintTop_toTopOf="@+id/diary_view" />

    <ImageView
        android:id="@+id/back_butt2"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/bexit"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/diary_view" />

    <ImageView
        android:id="@+id/letter_button"
        android:layout_width="193dp"
        android:layout_height="271dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="68dp"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/binvisible" />

</androidx.constraintlayout.widget.ConstraintLayout>