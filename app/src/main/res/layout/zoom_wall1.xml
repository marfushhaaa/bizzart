<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/wall1_zoomed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/wall1zoomed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/towel_img"
        android:layout_width="433dp"
        android:layout_height="383dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/towel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.71"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/wall1_zoomed"
        app:layout_constraintTop_toTopOf="@+id/wall1_zoomed"
        app:srcCompat="@drawable/new_black" />

    <ImageView
        android:id="@+id/back_butt4"
        android:layout_width="60dp"
        android:layout_height="37dp"
        android:layout_marginStart="49dp"
        android:layout_marginBottom="23dp"
        android:src="@drawable/bexit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>